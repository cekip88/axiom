				h2.block-title
					span BLOG
				.blog-filter
					include parts/search
					button.blog-filter-btn.active
						span Flows
					button.blog-filter-btn
						span news
					button.blog-filter-btn
						span article
					button.blog-filter-btn
						span digest
					button.blog-filter-btn.blog-search-btn(data-click='showBlogSearch')
						svg
							use(xlink:href='img/sprite.svg#search')
						span Search
			.section
